generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}
datasource db {
  provider = "postgresql"
}

enum status{
  CLARIFYING
  PLANNING
  BUILDING
  COMPLETED
  FAILED
  INIT
}

model User{
  id            String   @id @default(cuid())
  name          String?
  email         String   @unique
  emailVerified DateTime?
  image         String?
  createdAt     DateTime @default(now())
  accounts      Account[]
  sessions      Session[]
}

model Account{
  id                    String @id @default(cuid())
  userId                String
  type                  String
  provider              String
  providerAccountId     String
  scope                 String?
  createdAt             DateTime @default(now())
  access_token          String?
  expires_at            Int?
  token_type            String?
  id_token              String?
  refresh_token         String?

  user                  User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}


model Session{
  id                String @id @default(cuid())
  userId            String
  prompt            String
  status            status @default(INIT)
  retries           Int @default(0)
  error             String?
  createdAt         DateTime @default(now())
  clarification     Json?  
  plan              Json?  
  code              Json?  
  
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model LlmCache{
  promptHash        String   @id
  response          Json
  model             String
  createdAt         DateTime @default(now())
}